<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Sending\deleting messages">
    <test verbose="2" preserve-order="true" name="Sending messages in different ways"  group-by-instances="true">
          <classes>
            <class name="TestCases.TestCases">
                <methods>
                    <include name="sendMessage"/>
                    <include name="sendMessageWithoutSubjectPositive"/>
                    <include name="sendMessageWithoutSubjectNegative" />
                </methods>
            </class>
        </classes>
    </test>

        <test verbose="2" preserve-order="true" name="Deleting messages in different ways">
          <!--  <groups>
                <dependencies>
                    <group name="Deleting messages" depends-on="Sending messages"></group>
                </dependencies>
            </groups>-->
            <classes>

                <class name="TestCases.TestCases">
                    <methods>
                        <include name="deleteOneSentEmail"/>
                        <include name="deleteAllSentEmails"/>
                    </methods>
                </class>
            </classes>
        </test>
</suite>